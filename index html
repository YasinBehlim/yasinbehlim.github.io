<script>
  let all = [];
  fetch('https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&per_page=250')
    .then(r => r.json())
    .then(d => { all = d; list(d); });

  function list(c) {
    const s = document.getElementById('coin');
    s.innerHTML = '';
    c.forEach(x => {
      let o = document.createElement('option');
      o.value = x.id;
      o.textContent = `${x.name} (${x.symbol.toUpperCase()})`;
      s.appendChild(o);
    });
  }

  document.getElementById('s').oninput = e => {
    let q = e.target.value.toLowerCase();
    list(all.filter(x => x.name.toLowerCase().includes(q) || x.symbol.includes(q)));
  };

  function check() {
    let id = document.getElementById('coin').value;
    fetch(`https://api.coingecko.com/api/v3/simple/price?ids=${id}&vs_currencies=usd`)
      .then(r => r.json())
      .then(d => document.getElementById('price').innerHTML = `$${d[id].usd.toLocaleString()}`);
  }

  function profit() {
    let b = +document.getElementById('buy').value;
    let s = +document.getElementById('sell').value;
    let a = +document.getElementById('amt').value;
    let p = (s - b) * a;
    document.getElementById('prof').innerHTML = `Profit: <strong style="color:${p >= 0 ? '#238636' : '#e5534b'}">$${p.toFixed(2)}</strong>`;
  }

  function convert() {
    let p = +document.getElementById('price').value;
    let q = +document.getElementById('qty').value;
    document.getElementById('total').innerHTML = `Total: <strong style="color:#238636">$${(p * q).toFixed(2)}</strong>`;
  }
</script>
